#include<stdio.h>
void main()
{
  int a[2][2],b[2][2],i,j,d;

  printf("enter the matrix num:\n");
  for(i=0;i<=1;i++)
  {
    for(j=0;j<=1;j++)
    {
  scanf("%d",&a[i][j]);
    }
  }
printf("enter the matrix num:\n");
  for(i=0;i<=1;i++)
  {
     for(j=0;j<=1;j++)
     {
         scanf("%d",&b[i][j]);

     }
  }
  printf("matrix addition:\n");
  for(i=0;i<=1;i++)
  {
      for(j=0;j<=1;j++)
      {
d=a[i][j]+b[i][j];
    printf("%d\t",d);
      }
 printf("\n");
  }

  }

